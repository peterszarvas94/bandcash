# HTTP server bind port (internal service port)
PORT=2222

# Public app URL used in email links.
# Local: include port (for example, http://localhost:2222)
# Prod behind proxy: usually no port (for example, https://app.example.com)
URL=http://localhost:2222

# Runtime environment controls secure cookies and other prod-only behavior.
# Allowed values in this app: development | production
APP_ENV=development

# Logger level: debug | info | warn | error
LOG_LEVEL=debug

# Disable public signups (true | false)
DISABLE_SIGNUP=false

# Disable request rate limits (true | false)
DISABLE_RATE_LIMIT=false

# Log file location and prefix.
# Resulting filename format: <LOG_FOLDER>/<LOG_PREFIX>_YYYY_MM_DD_HHMMSS.log
LOG_FOLDER=logs
LOG_PREFIX=bandcash

# SQLite database file path
DB_PATH=sqlite.db

# Email (SMTP)
# SMTP provider host and port
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=587

# SMTP account credentials
SMTP_USERNAME=
SMTP_PASSWORD=

# Sender shown in outgoing emails (name + email)
EMAIL_FROM="BandCash <noreply@bandcash.local>"

# App env, development | production
APP_ENV=development
