package event

import (
	appi18n "bandcash/internal/i18n"
	"bandcash/internal/utils"
	shared "bandcash/models/shared"
)

templ EventShow(data EventData) {
	<!doctype html>
	<html lang={appi18n.LocaleCode(ctx)}>
		@shared.Head(data.Title)
		<body>
			<div data-signals={templ.JSONString(eventShowSignals(data, utils.CSRFToken(ctx)))} data-init="@get('/sse')"></div>
			@shared.Notifications()
			@shared.TwoCol("event-show", EventShowMain(data), EventShowSidebar(data))
		</body>
	</html>
}
